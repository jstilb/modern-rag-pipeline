# Modern RAG Pipeline Configuration
# Copy to .env and fill in values for production mode

# Pipeline mode: mock (default), production, hybrid
RAG_MODE=mock

# OpenAI API key (required for production mode)
# RAG_OPENAI_API_KEY=sk-...

# LLM settings
RAG_LLM_MODEL=gpt-4o-mini
RAG_LLM_TEMPERATURE=0.1
RAG_LLM_MAX_TOKENS=1024

# Embedding settings
RAG_EMBEDDING_MODEL=text-embedding-3-small
RAG_EMBEDDING_DIMENSIONS=384

# Chunking settings
RAG_CHUNKING_METHOD=recursive
RAG_CHUNK_SIZE=512
RAG_CHUNK_OVERLAP=64

# Retrieval settings
RAG_RETRIEVAL_METHOD=hybrid
RAG_TOP_K=5
RAG_SEMANTIC_WEIGHT=0.7
RAG_KEYWORD_WEIGHT=0.3

# API settings
RAG_API_HOST=0.0.0.0
RAG_API_PORT=8000
